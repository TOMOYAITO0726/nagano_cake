<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <table class="table  table-inverse"> 
        <th>会員一覧</th>
        <tr>
          <td>商品ID</td>  
          <td>氏名</td>  
          <td>メールアドレス</td>  
        <td>ステータス</td>  
        </tr>


      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
      
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
      
          <td><%= customer.email %></td>
      
          <% if customer.is_active==true %>
          <td>有効</td>
          <% else %>
          <td>退会</td>
        </tr>
          <% end %>

    <% end %>  
   </table>
  </div>
 </div>
</div>