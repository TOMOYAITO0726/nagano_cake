<div class="container">
      商品編集
     <%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
      <div class="item-edit">
       <table>    
        <tr>  
          <td>商品画像</td>
          <td><%= f.file_field :image , accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all,:id, :name) %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder:'1000' %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active, "販売中"%>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active, "販売停止中"%></td>
         </tr>
      </table>   
     </div>   
       <div class="change">   
          <%= f.submit '変更を保存',class:"btn btn-success"%>
        </div>  
          <% end %>
      
</div>