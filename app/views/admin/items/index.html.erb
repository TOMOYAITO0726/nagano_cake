<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
<table class="table  table-inverse"> 
<th>商品一覧</th>

<tr>
<td>商品ID</td>  
<td>商品名</td>  
<td>税抜価格</td>  
<td>ジャンル</td>  
<td>ステータス</td>  
</tr>
<tr>
<% @items.each do |item| %>

<td><%= item.id %></td>

<td><%= link_to item.name , admin_item_path(item.id) %></td>

<td><%= item.price %></td>

<td><%= item.genre.name %></td>

<td>
<%  if item.is_active %>
 販売中
<% else %> 
 販売停止中
<% end %>
</td>
 </tr>
<% end %>
   </table>
  </div>
 </div>
</div>
