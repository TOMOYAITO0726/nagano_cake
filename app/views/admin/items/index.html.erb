<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <b>商品一覧</b>    
    </div>
    <div class="col-lg-6"></div>
    <div class="col-lg-3">
      <%= link_to new_admin_item_path,class: "d-flex justify-content-end" do %>
      <i class="fas fa-plus-circle fa-3x plus-button"></i>
      <% end %>
    </div>
    <table class="table  table-inverse"> 
      <tr>
        <td>商品ID</td>  
        <td>商品名</td>  
        <td>税抜価格</td>  
        <td>ジャンル</td>  
        <td>ステータス</td>  
      </tr>
      <tr>
        <% @items.each do |item| %>
  
        <td><%= item.id %></td>
  
        <td><%= link_to item.name , admin_item_path(item.id) %></td>
  
        <td><%= item.price %></td>
  
        <td><%= item.genre.name %></td>
  
        <td>
        <%  if item.is_active %>
         販売中
        <% else %> 
         販売停止中
        <% end %>
        </td>
       </tr>
        <% end %>
    </table>
  
 </div>
</div>
