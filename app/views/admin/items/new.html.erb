<div class="container">
    商品新規登録
    <%= form_with model: @item, url: admin_items_path, method: :post ,local:true do |f| %>
    <table>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image , accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all,:id, :name) %></td>
      </tr> 
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price, placeholder:'1000' %>円</td>
      </tr>
      <tr>
        <td>販売ステータス
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "販売中"%>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "販売停止中"%></td>
      </tr> 
    </table>
    
    <%= f.submit '新規登録',class:"btn btn-success"%>
    <% end %>

</div>