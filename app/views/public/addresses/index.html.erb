<div class="container">
<h1>配送先登録／一覧</h1>

<%= form_with model: @address, url: public_addresses_path,  method: :post, local:true do |f| %>
<h1>郵便番号</h1>
<%= f.text_field :postal_code %>
<h1>住所</h1>
<%= f.text_field :address %>
<h1>宛名</h1>
<%= f.text_field :name %>

<%= f.submit '新規登録',class:"btn btn-success" %>
<% end %>
<table>

<% @addresses.each do |address| %>
  <tr>
  <td><%= address.postal_code %></td>

  <td><%= address.address %></td>

  <td><%= address.name %></td>

  <td><%= link_to "編集する" ,edit_public_address_path(address.id) ,class:"btn btn-success" %></td>
  <td><%= link_to "削除する" ,public_address_path(address.id),method: :delete, class:"btn btn-success" %></td>
  </tr>
<% end %>

</table>

</div>