<div class="container">
<%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class:"btn btn-outline-danger" %>    
<h1>ショッピングカート</h1>
<table>
<tr>
<td>商品名</td>  
<td>単価（税込）</td>  
<td>数量</td>  
<td>小計</td>  
<td></td>  
</tr>



<% @cart_items.each do |cart_item| %>
<tr>
<td><%= cart_item.item.name %></td>
<td><%= cart_item.item.with_tax_price %></td>
<td>
    
     <%= form_with(model:[cart_item], url: public_cart_item_path(cart_item.id), method: :patch, local:true) do |f| %>
     <%= f.select :amount,*[1..10] %>
     <%= f.submit "変更",class:"btn btn-success"  %> 
     <% end %>


</td>
<td><%= cart_item.subtotal %></td>
<td><%= link_to "削除", public_cart_item_path(cart_item.id) ,method: :delete, class:"btn btn-outline-danger" %></td>
<% @subtotal+= cart_item.subtotal %>
</tr>

<% end %>
</table>

<table>
<tr>
<td></td>    
<td></td>
<td></td>
<td>合計金額</td>    
<td><%= @subtotal %></td>
</tr>
</table>

</div>