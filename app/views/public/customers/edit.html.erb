<div class="container">
<h1>会員情報編集ページ</h1>

<%= form_with model: @customer, url: public_customers_update_path, local:true do |f| %>

 <div class="field">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  
 <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "last_name" %>
  </div>
 


<%= f.submit "編集内容を保存",class:"btn btn-success" %>
<%= link_to "退会する",  public_customers_quit_path %>
<% end %> 
</div>

