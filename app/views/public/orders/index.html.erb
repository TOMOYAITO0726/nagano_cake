<div class="container">
    <h1>注文履歴</h1>
   <table border="2" cellpadding="6" cellspacing="5" >
    <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
    </tr>   
       
    <% @orders.each do |order| %>
    <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>    
        <td>
        <%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.full_name %>
        </td>
        <td><% order.order_details.each do |order_detail|  %>
            <%= order_detail.item.name %>
            <% end %>
        </td>
        <td><%= order.amount_billed %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する" ,public_order_path(order.id),class:"btn btn-primary" %></td>
    </tr>
    <% end %>
   </table>
 
</div>