<div class="container">
<h1>注文情報入力</h1>

 <%= form_with(model: @order,url: public_orders_confirm_path,method: :post, local:true) do |f| %>
  <h2>支払い方法</h2>
  <%= f.radio_button :payment_method, Order.payment_methods .key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods .key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>


  <h3>お届け先</h3>
  <div class="my_address">
  <%= f.radio_button :address_option, "my_address" %>
  <%= f.label :address, "ご自身の住所" %>
  </div>
  
  <div class="registrations_address">
  <%= f.radio_button :address_option, "registrations_address" %>
  <%= f.label :address, "登録先住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
  </div>
  
  <div class="new_address">
  <%= f.radio_button :address_option, "new_address" %>
  <%= f.label :address, "新しいお届け先" %>
   <div class="postal_code">
  郵便番号
  <%= f.text_field :postal_code %>
   </div>
  
   <div class="address">
  住所
  <%= f.text_field :address %>
   </div>
  
   <div class="full_name">
  宛名
  <%= f.text_field :full_name %>
   </div>
  </div>
 
  
 <%= f.submit "確認画面へ進む" ,class:"btn btn-primary" %> 
 <% end %> 
</div>

