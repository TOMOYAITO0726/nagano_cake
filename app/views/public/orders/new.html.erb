<div class="container">
<h1>注文情報入力</h1>

 <%= form_with(model: @order, method: :post, local:true) do |f| %>
  <h2>支払い方法</h2>
  <%= f.radio_button :payment_method, Order.payment_methods .key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods .key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>


  <h3>お届け先</h3>
  <%= f.radio_button :address_option, "my_address" %>
  <%= f.label :address, "ご自身の住所" %>
  
  <%= f.radio_button :address_option, "registrations_address" %>
  <%= f.label :address, "登録先住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
  
  <%= f.radio_button :address_option, "new_address" %>
  <%= f.label :address, "新しいお届け先" %>
  
  
 <% end %>
</div>

